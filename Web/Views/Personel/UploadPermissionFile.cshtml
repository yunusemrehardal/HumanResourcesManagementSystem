@model PermissionViewModel
<div class="card-body">
    <form asp-controller="Personel" asp-action="UploadPermissionFile" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <input asp-for="Id" type="text" class="form-control" hidden>
        </div>
        <div class="mb-3">
            <label style="font-weight:bold" asp-for="PermissionFile" class="form-label">Fatura Döküman</label>
            <input asp-for="PermissionFile" type="file" class="form-control">
            <span asp-validation-for="PermissionFile" class="text-danger"></span>
        </div>
        <button class="btn btn-outline-dark" style="font-weight:bold" type="submit" asp-action="UploadPermissionFile" asp-controller="Personel">YÜKLE</button>
        <a class="btn btn-outline-dark" style="font-weight:bold" asp-action="ListPermissionRequests" asp-controller="Personel">GERİ</a>
    </form>
</div>
