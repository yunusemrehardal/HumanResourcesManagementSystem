@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}


<h5 class="text-center" style="text-align:center">Mail Adresinizi Giriniz</h5>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form style="display: flex; flex-direction: column; align-items: center" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating text-center w-75" style="font-size:14px;padding:0.375rem,0.75rem">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button style="font-size:14px;padding:0.375rem,0.75rem" type="submit" class="btn btn-lg btn-primary mt-3">Şifremi Sıfırla</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
